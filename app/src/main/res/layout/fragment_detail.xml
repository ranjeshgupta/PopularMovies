<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.android.sunshine.app.DetailActivity.DetailFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <ImageView
            android:id="@+id/poster_image"
            style="@style/style_image_view_detail" />

        <View
            android:background="@drawable/circle"
            android:id="@+id/favourite_bg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="238dp"
            android:layout_marginLeft="145dp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/favourite"
            style="@style/style_image_view"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="244dp"
            android:layout_marginLeft="149dp"/>

        <TextView
            android:id="@+id/movie_name"
            style="@style/style_txt_movie_name"/>

        <TextView
            android:id="@+id/release_date"
            style="@style/style_txt_movie_date"
            android:layout_below="@id/movie_name"/>

        <RatingBar
            android:id="@+id/rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/movie_name"
            android:layout_marginTop="20dp"
            android:isIndicator="true"
            android:numStars="5"
            android:stepSize=".1"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_below="@+id/release_date"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/rating"
            style="@style/style_txt_rating"
            android:layout_below="@id/rating_bar"/>

        <TextView
            android:id="@+id/synopsis"
            style="@style/style_txt_synopsis_head"
            android:layout_below="@id/poster_image" />

        <TextView
            android:id="@+id/overview"
            style="@style/style_txt_synopsis"
            android:layout_below="@id/synopsis"/>

        <TextView
            android:id="@+id/trailer_head"
            style="@style/style_txt_synopsis_head"
            android:layout_below="@id/overview"
            android:text="@string/label_trailer_head"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/video_image_01"
            style="@style/style_image_view_trailer"
            android:layout_below="@id/trailer_head"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/yt_play_button_01"
            android:src="@drawable/play_overlay_large"
            android:layout_below="@id/trailer_head"
            style="@style/style_image_view_trailer"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/video_image_02"
            style="@style/style_image_view_trailer"
            android:layout_below="@id/video_image_01"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/yt_play_button_02"
            android:src="@drawable/play_overlay_large"
            android:layout_below="@id/video_image_01"
            style="@style/style_image_view_trailer"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/video_image_03"
            style="@style/style_image_view_trailer"
            android:layout_below="@id/video_image_02"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/yt_play_button_03"
            android:src="@drawable/play_overlay_large"
            android:layout_below="@id/video_image_02"
            style="@style/style_image_view_trailer"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/reviews_head"
            style="@style/style_txt_synopsis_head"
            android:layout_below="@id/video_image_03"/>

        <TextView
            android:id="@+id/reviews"
            style="@style/style_txt_synopsis"
            android:layout_below="@id/reviews_head"/>


    </RelativeLayout>
</ScrollView>